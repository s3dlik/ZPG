uniform mat4 cameraPos;
uniform mat4 cameraMatrix;
uniform mat4 modelMatrix;

out vec3 pos;
out vec4 color;

void main () {
		gl_Position = cameraMatrix  * modelMatrix  * vec4(position,1.0);
		//color = _color;
		pos = position;
}